<UserControl x:Class="UP_011.Elements.Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UP_011.Elements"
             mc:Ignorable="d" >
    <Grid Background="Aqua" Margin="10">
        <StackPanel>
            <Label x:Name="lb_type" Content="Тип: "/>
            <Label x:Name="lb_director" Content="Директор: "/>
            <Label x:Name="lb_phone" Content="Номер: "/>
            <Label x:Name="lb_raiting" Content="Рейтинг: "/>
            <Button x:Name="Edit" Click="Edit_Click" Content="Изменить" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10"/>
            <Button x:Name="Delete" Click="Delete_Click" Content="Удалить" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
