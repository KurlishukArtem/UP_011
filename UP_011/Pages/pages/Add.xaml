<Page x:Class="UP_011.Pages.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP_011.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid>
        <Grid VerticalAlignment="Top" Height="50" Background="Gray">
            <Button Click="Back_Click" VerticalAlignment="Center" HorizontalAlignment="Right" Content="назад" Margin="0,0,10,0"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,50,0,0">
                <Label Content="Тип" Margin="10,0,0,0"/>
                <TextBox x:Name="tb_type" Text="" Margin="10" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Label Content="Наименование" Margin="10,0,0,0"/>
                <TextBox x:Name="tb_name" Text="" Margin="10" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Label Content="Директор" Margin="10,0,0,0"/>
                <TextBox x:Name="tb_director" Text="" Margin="10" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Label Content="Е-Майл" Margin="10,0,0,0"/>
                <TextBox x:Name="tb_email" Text="" Margin="10" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left"/>

            </StackPanel>
            <StackPanel Grid.Column="2" Margin="0,50,0,0">
                <Label Content="Телефон" Margin="10,0,0,0"/>
                <TextBox x:Name="tb_phone" Text="" Margin="10" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Label Content="Адрес проживания" Margin="10,0,0,0"/>
                <TextBox x:Name="tb_legaladress" Text="" Margin="10" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Label Content="ИНН" Margin="10,0,0,0"/>
                <TextBox x:Name="tb_INN" Text="" Margin="10" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Label Content="Рейтинг" Margin="10,0,0,0"/>
                <TextBox x:Name="tb_raiting" Text="" Margin="10" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <Button x:Name="add" Click="add_Click" Content="Добавить" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
